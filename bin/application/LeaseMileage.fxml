<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LeaseMileageController">
	<children>
		<Pane prefHeight="360.0" prefWidth="320.0">
			<children>
				<Label fx:id="lblTitle" layoutX="57.0" layoutY="14.0" text="Lease Mileage Calculator">
					<font>
						<Font size="18.0" />
					</font>
				</Label>

				<!-- Top section, user input -->
				<Label fx:id="lblLeaseStart" layoutX="51.0" layoutY="59.0" text="Lease Start Date:" />
				<TextField fx:id="txtLeaseStart" layoutX="164.0" layoutY="54.0" prefHeight="26.0" prefWidth="107.0" promptText="MM-DD-YYYY" />
				<Label fx:id="lblMilesPerYear" layoutX="63.0" layoutY="92.0" text="Miles per Year:" />
				<TextField fx:id="txtMilesPerYear" layoutX="164.0" layoutY="87.0" prefHeight="26.0" prefWidth="64.0" promptText="XXXXX" />
				<Label fx:id="lblCurrMileage" layoutX="51.0" layoutY="125.0" text="Current Mileage:" />
				<TextField fx:id="txtCurrMileage" layoutX="164.0" layoutY="120.0" prefHeight="26.0" prefWidth="64.0" promptText="XXXXX" />

				<!--Calculate & Clear buttons -->
				<Button fx:id="btnCalculate" layoutX="82.0" layoutY="165.0" mnemonicParsing="false" text="Calculate" />
				<Button fx:id="btnClear" layoutX="165.0" layoutY="165.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="64.0" text="Clear" />

				<!-- Bottom section, data display -->
				<Label fx:id="lblRecTotMlg" layoutX="41.0" layoutY="210.0" text="Rec. Total Mileage:" />
				<Label fx:id="lblDispRecTotMlg" layoutX="166.0" layoutY="210.0" />
				<Label fx:id="lblCurOvg" layoutX="52.0" layoutY="239.0" text="Current Overage:" />
				<Label fx:id="lblDispCurOvg" layoutX="166.0" layoutY="239.0" />
				<Label fx:id="lblRecDlyMlg" layoutX="42.0" layoutY="268.0" text="Rec. Daily Mileage:" />
				<Label fx:id="lblDispRecDlyMlg" layoutX="166.0" layoutY="268.0" />
				<Label fx:id="lblCurDlyMlg" layoutX="10.0" layoutY="297.0" text="Cur. Avg. Daily Mileage:" />
				<Label fx:id="lblDispCurDlyMlg" layoutX="166.0" layoutY="297.0" />
				<Label fx:id="lblRecDlyChg" layoutX="43.0" layoutY="326.0" text="Rec. Daily Change:" />
				<Label fx:id="lblDispRecDlyChg" layoutX="166.0" layoutY="326.0" />
			</children>
		</Pane>
	</children>
</AnchorPane>
